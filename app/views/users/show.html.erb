<div class="row">
  <div class="col-md-12">
    <h1 class="center">Welcome to <%= @user.username %>'s Page</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <h4 class="center"><%= @user.username %>'s Articles</h4>
  </div>
</div>
<%= render 'articles/article', obj: @user.articles %>