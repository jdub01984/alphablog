<h1>Listing all articles</h1>
<p>
  <%= link_to "Create new article", new_article_path %>
</p>
<table>
  <tr>
    <th style="padding-left: 10px; padding-right: 10px;">Title</th>
    <th style="padding-left: 10px; padding-right: 10px;">Description</th>
  </tr>
  
  <% @articles.each do |article| %>
  <tr>
    <td style="padding-left: 10px; padding-right: 10px;"><%= article.title %></td>
    <td style="padding-left: 10px; padding-right: 10px;"><%= article.description %></td>
    <td style="padding-left: 10px; padding-right: 10px;"><%= link_to 'Edit', edit_article_path(article) %></td>
    <td style="padding-left: 10px; padding-right: 10px;"><%= link_to "View", article_path(article) %></td>
  </tr>
  <% end %>
</table>