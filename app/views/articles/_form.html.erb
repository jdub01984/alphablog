<%= form_for @article do |f| %>
  <p style="margin-left:20px;">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p style="margin-left:20px;">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p style="margin-left:20px;">
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to articles listing", articles_path %>